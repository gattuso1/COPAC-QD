#!/bin/bash


if [[ -z $1 ]];then
echo -e "\nYou should use it like this:\n\n$0 number\n"
exit
else
name=WaveFunction$1
fi

echo Compiling $name


#f95 -c LegendrePolynomial.f90
f95 -c Vectors.f90
f95 -c Integrals.f90 -fno-range-check
f95 -c Constants.f90 -fno-range-check
f95 -c Variables.f90 
#f95 -c Integrals_D.f90 -fno-range-check
f95 -c $name.f90 -s #-I /home/gattuso/NAG/fslm623dcl/nag_interface_blocks/ /home/gattuso/NAG/fslm623dcl/lib/intel64/libnagsmp.a /home/gattuso/NAG/fll6i26dfl/nag_interface_blocks/ /home/gattuso/NAG/fll6i26dfl/lib/libnag_mkl.a  -g -Wall -Wextra -pedantic -fimplicit-none -fcheck=all -fbacktrace -fno-range-check -O -O1 -O2 -O3
f95 Variables.o Integrals.o Vectors.o $name.o -o $name -L/usr/lib/x86_64-linux-gnu/lapack -llapack -I /usr/lib/x86_64-linux-gnu/libblas.a -I /home/gattuso/NAG/fll6i26dfl/nag_interface_blocks/ /home/gattuso/NAG/fll6i26dfl/lib/libnag_mkl.a -lblas -double -g -Wall -Wextra -pedantic -fimplicit-none -fcheck=all -fbacktrace -fno-range-check -s -O -O1 -O2 -O3



